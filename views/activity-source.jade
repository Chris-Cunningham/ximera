extends layouts/main

block title
  | #{activity.title}

block content
    div.container.activity(data-activityId=activityId, ng-controller="ActivityController")
      div.pull-right.btn-toolbar(role="toolbar")
        .btn-group
          a.btn.btn-info(role="button",href="../")
            | <i class="fa fa-pencil"></i> Do Activity
        .btn-group
          a.btn.btn-primary(role="button",href="https://github.com/#{activity.repo.gitIdentifier}/blob/master/#{activity.relativePath}")
            | <i class="fa fa-github-alt"></i> View on GitHub

      .page-header
         h1 #{activity.title}
           small &nbsp;source code
      pre(class="brush: latex; gutter: false;")
        | #{activity.latexSource}


